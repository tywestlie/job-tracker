Title: <%= @job.title %>
<br>

Description: <%= @job.description %>
<br>

Level of Interest: <%= @job.level_of_interest %>
<br>

City: <%= @job.city %>
<br>

<%= link_to 'Edit', edit_job_path %>
<%= link_to 'Delete', job_path(@job), method: :delete %>

Company: <%= link_to @job.company.name, company_path(@job.company) %>

<h2>Enter a new comment:</h2>
<%= form_for [@job, @comment] do |f| %>
  <%= f.label :comment %>
  <%= f.text_field :comment %>
  <%= f.submit %>
<% end %>

<h2>Comments</h2>
<% @comments.each do |comment| %>
  <h3><%= comment.id %></h3>
<%end%>
